
@using IdentityCore_19_12_2021.Model
@model IEnumerable<ApplicationUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-bordered table-striped m-1 p-1 table-sm">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Users
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" value="Delete" class="form-control btn-danger">Delete</button>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="Create" class="btn btn-primary">Create User</a>